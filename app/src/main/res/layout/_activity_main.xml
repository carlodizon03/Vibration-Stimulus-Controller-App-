<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:focusable="true"
    android:focusableInTouchMode="true">


    <Chronometer
        android:id="@+id/chronometer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:fontFamily="serif"
        android:textColor="#FF565557"
        android:layout_marginTop="53dp"
        android:textSize="40sp" />




    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/scanStatus"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="79dp"
        android:src="@drawable/heatbar" />

    <ImageButton
        android:id="@+id/re_button"
        android:layout_width="56dp"
        android:layout_height="wrap_content"
        android:layout_alignRight="@id/imageView"
        android:layout_alignParentTop="true"
        android:layout_marginRight="-11dp"
        android:src="@android:drawable/ic_popup_sync" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="48dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/re_button"
        android:layout_alignRight="@id/imageView"
        android:layout_marginTop="40dp"
        android:fontFamily="serif"
        android:text="MAX"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="48dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/re_button"
        android:layout_alignLeft="@id/imageView"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="40dp"
        android:fontFamily="serif"
        android:text="MIN"
        android:textSize="18sp" />

    <Button
        android:id="@+id/start_button"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="50dp"
        android:text="START" />

    <Button
        android:id="@+id/connected_button"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="250dp"
        android:text="CONNECT" />



    <Button
        android:id="@+id/stop_button"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="150dp"
        android:text="STOP" />

    <ca.hss.heatmaplib.HeatMap
        android:id="@+id/heatmap1"
        android:layout_width="144dp"
        android:layout_height="322dp"
        android:layout_below="@id/imageView"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="33dp"
        android:layout_marginTop="70dp"
        app:maxDrawingWidth="200dp"
        app:maxOpacity="255"
        app:minOpacity="0"
        app:radius="200dp"
        tools:ignore="MissingClass" />

    <ca.hss.heatmaplib.HeatMap
        android:id="@+id/heatmap2"
        android:layout_width="149dp"
        android:layout_height="322dp"
        android:layout_below="@id/imageView"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="33dp"
        android:layout_marginTop="70dp"
        android:layout_marginRight="30dp"
        app:maxDrawingWidth="200dp"
        app:maxOpacity="255"
        app:minOpacity="0"
        app:radius="200dp"
        tools:ignore="MissingClass" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="178dp"
        android:layout_height="480dp"
        android:layout_below="@id/imageView"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="14dp"
        android:layout_marginTop="120dp"
        android:layout_alignParentTop="true"
        android:src="@drawable/shoepad_l" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="178dp"
        android:layout_height="480dp"
        android:layout_below="@id/imageView"
        android:layout_alignParentRight="true"
        android:layout_marginRight="14dp"
        android:layout_marginTop="120dp"
        android:layout_alignParentTop="true"
        android:src="@drawable/shoepad" />

    <TextView
        android:id="@+id/scanStatus"
        android:layout_width="119dp"
        android:layout_height="36dp"
        android:fontFamily="serif"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/sensorView1"
        android:layout_width="71dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/imageView"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="281dp"
        android:layout_marginBottom="110dp"
        android:layout_marginRight="50dp"
        android:ems="10"
        android:fontFamily="serif"
        android:textSize="10sp" />

    <TextView
        android:id="@+id/sensorView4"
        android:layout_width="72dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/imageView"
        android:layout_alignRight="@id/sensorView1"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="178dp"
        android:layout_marginRight="-103dp"
        android:layout_marginBottom="110dp"
        android:ems="10"
        android:fontFamily="serif"
        android:textSize="10sp" />

    <TextView
        android:id="@+id/sensorView5"
        android:layout_width="66dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/imageView"
        android:layout_alignRight="@id/sensorView4"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="84dp"
        android:layout_marginRight="-94dp"
        android:layout_marginBottom="110dp"
        android:ems="10"
        android:fontFamily="serif"
        android:textSize="10sp" />

    <TextView
        android:id="@+id/sensorView6"
        android:layout_width="66dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/imageView"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="150dp"
        android:layout_marginEnd="-6dp"
        android:layout_marginBottom="110dp"
        android:ems="10"
        android:fontFamily="serif"
        android:textSize="10sp" />
    <TextView
        android:id="@+id/sensorView1R"
        android:layout_width="71dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/imageView"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="281dp"
        android:layout_marginBottom="84dp"
        android:layout_marginRight="50dp"
        android:ems="10"
        android:fontFamily="serif"
        android:textSize="10sp" />

    <TextView
        android:id="@+id/sensorView4R"
        android:layout_width="72dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/imageView"
        android:layout_alignRight="@id/sensorView1"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="178dp"
        android:layout_marginRight="-103dp"
        android:layout_marginBottom="84dp"
        android:ems="10"
        android:fontFamily="serif"
        android:textSize="10sp" />

    <TextView
        android:id="@+id/sensorView5R"
        android:layout_width="66dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/imageView"
        android:layout_alignRight="@id/sensorView4"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="84dp"
        android:layout_marginRight="-94dp"
        android:layout_marginBottom="84dp"
        android:ems="10"
        android:fontFamily="serif"
        android:textSize="10sp" />

    <TextView
        android:id="@+id/sensorView6R"
        android:layout_width="66dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/imageView"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="150dp"
        android:layout_marginEnd="-6dp"
        android:layout_marginBottom="84dp"
        android:ems="10"
        android:fontFamily="serif"
        android:textSize="10sp" />

</RelativeLayout>
